<UserControl x:Class="Hummingbird.Pages.AboutPageMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="ABOUT HUMMINGBIRD" Style="{StaticResource Heading2}" />
                <TextBlock Text="version 2.0.0" Style="{StaticResource Small}"/>
                <TextBlock Text="created by" Margin="0,8,0,0"/>
                <TextBlock Text="den delimarsky" Style="{StaticResource Emphasis}"></TextBlock>
                <TextBlock TextWrapping="Wrap" Text="XAML logo by John Caserta from the Design Office (The XAML Project) - CC Atribution 3.0"></TextBlock>
                <Button x:Name="BtnContact" Click="btnContact_Click" Width="180" Content="contact developer" HorizontalAlignment="Left" Margin="0,12,0,0"></Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
